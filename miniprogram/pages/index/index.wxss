/**index.wxss**/
.index-swiper{
  margin: 20rpx;
  height: 300rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.index-swiper image{
  height: 100%;
  width: 100%;
  border-radius: 10rpx;
  overflow: hidden;
}

.index-service .service-list{
  display: flex;
  margin-left: 20rpx;
 
}

.index-service .service-list .service-item{
  width: 222.5rpx;
  display: flex;  
  border: 1rpx #cdcdcd solid;
  margin-right: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  
}
.index-service .service-list .service-item .iconfont{
  margin-left: 10rpx;
  margin-top: 10rpx;
  font-size: 32px;
  color: #e8d88d;
}
.index-service .service-list .service-item .item-text{
  margin: 0 auto;
  margin-top: 10rpx;
}

.index-service .service-list .service-item .item-text .content{
  display: block;
  font-size: 9px;
  color: #cdcdcd;
  margin-bottom: 10rpx;
}
.index-restaurant{
  margin: 20rpx 20rpx;
  border: 1rpx #cdcdcd solid;
  border-radius: 10rpx;
  overflow: hidden;
}

.index-restaurant .top{
  margin-top: 10rpx;
}

.index-restaurant .top{
  border-bottom: 1rpx #cdcdcd solid;
  padding-bottom: 10rpx;
}

.index-restaurant .top .iconfont{
  color: #e8d88d;
  margin: 20rpx;
  
}

.index-restaurant .information{
  font-size: 10px;
  margin: 20rpx 20rpx;
}

.index-restaurant .information .restaurant-name{
  display: flex;
  margin-bottom: 20rpx;
  border-bottom: 1rpx #cdcdcd dashed;
}

.index-restaurant .information .restaurant-name image{
  width: 100rpx;
  height: 100rpx;
  padding-bottom: 20rpx;
}

.index-restaurant .information .restaurant-name text{
  margin-top: 20rpx;
  margin-left: 25rpx;

}
.index-restaurant .information .time{
  border-bottom: 1rpx #cdcdcd dashed;
  padding-bottom: 20rpx;
}

.index-restaurant .information .time .iconfont{
  margin-right: 20rpx;

}

.index-restaurant .information .address{
  padding-top: 20rpx;
  display: flex;
  border-bottom: 1rpx #cdcdcd dashed;
  padding-bottom: 20rpx;
}

.index-restaurant .information .address .iconfont{
  margin-right: 20rpx;
}

.index-restaurant .information .address .navagtion,.phone{
  
  margin-left: 20rpx;
  padding-right: 10rpx;
}

.index-restaurant .information .address .navagtion{
  border-right: 1rpx #cdcdcd solid;
}

.index-restaurant .information .address .navagtion text{
  display: block;
  
}

.index-restaurant .information .address .phone text{
  display: block;
  
}

.index-restaurant .information .about{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.index-restaurant .information .about .iconfont{
  margin-right: 20rpx;
}


